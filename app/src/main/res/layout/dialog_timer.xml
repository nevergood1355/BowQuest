<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTrans"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/cont"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fon_dialog"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fon_dialog_header"
            android:text="@string/text_gems"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/timer"
                android:textColor="@color/colorBlack"
                android:textSize="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="26sp"
                android:text=" мин"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/buy_ad"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/buy"
                android:layout_width="200dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:elevation="2dp"
                android:background="@drawable/fon_button"
                android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.Button"
                android:text="Получить"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/icon_gems"
                    android:layout_height="24dp"/>
                
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/close"
        android:background="@drawable/fon_button"
        android:layout_width="35dp"
        android:layout_alignEnd="@id/cont"
        android:layout_alignTop="@id/cont"
        android:elevation="5dp"
        android:src="@drawable/icon_close"
        android:layout_height="35dp"/>

</RelativeLayout>